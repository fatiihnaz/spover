{
  "name": "spoover",
  "productName": "Spover",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "build-main": "node ./src/build-main.js",
    "build": "npm run build-main && vite build",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run build-main -- --watch\" \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "package-win": "npm run build && electron-packager . Spover --platform=win32 --arch=x64 --out=release --overwrite"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.5.0",
    "concurrently": "^9.1.2",
    "electron": "^36.3.1",
    "electron-packager": "^17.1.2",
    "esbuild": "^0.25.4",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.7",
    "dotenv": "^16.5.0",
    "electron-store": "^10.0.1",
    "express": "^5.1.0",
    "framer-motion": "^12.14.0",
    "lucide-react": "^0.515.0",
    "node-vibrant": "^4.0.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "spotify-web-api-node": "^5.0.2",
    "tailwindcss": "^4.1.7",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.fatih.spover",
    "productName": "Spover",
    "files": [
      "dist/**/*",
      "src/**/*",
      "public/**/*",
      "package.json"
    ],
    "protocols": [
      {
        "name": "Spover Protocol",
        "schemes": [
          "spover"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
